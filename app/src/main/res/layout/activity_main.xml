<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="fr.utt.if26.if26app.MainActivity">

    <EditText
        android:id="@+id/passwordTextField"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="359dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/usernameTextField"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_x="75dp"
        android:layout_y="254dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/uttImage"
        android:layout_width="284dp"
        android:layout_height="143dp"
        android:layout_x="49dp"
        android:layout_y="57dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/utt1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_x="45dp"
        android:layout_y="13dp"
        android:text="Bienvenue sur MyUTT"
        android:textColor="#0D47A1"
        android:textSize="60px" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_x="130dp"
        android:layout_y="220dp"
        android:text="Utilisateur :"
        android:textColor="#0D47A1"
        android:textSize="50px" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="123dp"
        android:layout_y="324dp"
        android:text="Mot de passe :"
        android:textColor="#0D47A1"
        android:textSize="50px" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp"
        android:layout_x="35dp"
        android:layout_y="432dp"
        android:background="#0D47A1"
        android:backgroundTint="?android:attr/statusBarColor"
        android:text="Allez-y"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="405dp" />

</AbsoluteLayout>
