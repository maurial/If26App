<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="fr.utt.if26.if26app.Main2Activity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="278dp"
        android:layout_height="36dp"
        android:layout_x="57dp"
        android:layout_y="14dp"
        android:text="Gérer vos notes de l'UTT"
        android:textColor="#0D47A1"
        android:textSize="50px"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="70dp"
        android:text="UV Code :"
        android:textColor="#0D47A1"
        android:textSize="40px"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="48dp" />

    <EditText
        android:id="@+id/codeTextField"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_x="121dp"
        android:layout_y="59dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="118dp"
        android:text="Note :"
        android:textColor="#0D47A1"
        android:textSize="40px" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="168dp"
        android:text="ID (*reservez à la mise à jour et suppression des notes) :"
        android:textColor="#0D47A1"
        android:textSize="40px" />

    <EditText
        android:id="@+id/idTextField"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_x="283dp"
        android:layout_y="175dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/marksTextField"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_x="121dp"
        android:layout_y="109dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="378dp"
        android:background="#0D47A1"
        android:textColor="#FFFFFF"
        android:text="Mettre à jour" />

    <Button
        android:id="@+id/viewButton"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="312dp"
        android:background="#0D47A1"
        android:textColor="#FFFFFF"
        android:text="Afficher" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_x="15dp"
        android:layout_y="250dp"
        android:background="#0D47A1"
        android:textColor="#FFFFFF"
        android:text="Ajouter" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="445dp"
        android:background="#0D47A1"
        android:text="Supprimer"
        android:textColor="#FFFFFF" /><![CDATA[

    tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="16dp" />

]]>
</AbsoluteLayout>
